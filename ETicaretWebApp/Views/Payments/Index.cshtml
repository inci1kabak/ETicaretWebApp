@model IEnumerable<ETicaretWebApp.Models.Entities.Payment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PaymentName)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
